struct PixelInputType
{
    float4 position : SV_POSITION;
    float2 uv : TEXCOORD;
};

Texture2D tex;
SamplerState texSampler;

float4 PS(PixelInputType input) : SV_TARGET
{
    float4 textureColor;

    // Sample the pixel color from the texture using the sampler at this texture uv coordinate.
    textureColor = tex.Sample(texSampler, input.uv);

    return textureColor;
}